{{#if editStory}}
  <h1>{{story.headline}}</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author}}
      </div>

      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image}}
      </div>

      <div class="form-group">
        <label for="featured">true or false</label>
        {{input value=featured}}
      </div>

      <button {{action 'updateStory' story}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editFormShow'}} class="btn btn-warning">Edit Story</button>
{{/if}}
